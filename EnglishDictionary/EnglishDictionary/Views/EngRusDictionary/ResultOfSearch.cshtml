@model EnglishDictionary.Models.EngRusDictionaryModel;
@{
    ViewBag.Title = "ResultOfSearch";
}
<link rel="stylesheet" href="~/css/StyleDictionary.css" />

<body>
    <div class="text-center" align="center">
        <h1 class="display-4">English-Russian dictionary</h1>
    </div>
    <form asp-controller="EngRusDictionary" asp-action="SearchWord">
        <div class="form-group">
            <label class="control-label">Word</label>
            <input type="text" name="Word" class="form-control" placeholder="search..." pattern="^[a-zA-Z]+$" />
        </div>
        <div class="form-group">
            <input type="submit" value="send" class="btn btn-default" />
        </div>
    </form>
    <h2>@Model.Word [@Model.Transcription] - @Model.Translation</h2>
</body>