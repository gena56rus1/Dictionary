@model EnglishDictionary.Models.EngRusDictionaryModel;
@{
    ViewBag.Title = "ResultOfSearch";
}

<form asp-controller="EngRusDictionary" asp-action="SearchWord">
    <div class="form-group">
        <label class="control-label">Word</label>
        <input type="text" name="Word" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>
<h2>@Model.Word [@Model.Transcription] - @Model.Translation</h2>