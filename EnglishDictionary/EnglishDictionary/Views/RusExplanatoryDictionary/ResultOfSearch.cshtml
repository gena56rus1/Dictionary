@model EnglishDictionary.Models.RusExplanatoryDictionaryModel;
@{
    ViewBag.Title = "ResultOfSearch";
}
<link rel="stylesheet" href="~/css/StyleDictionary.css" />

<body>
    <div class="text-center" align="center">
        <h1 class="display-4">Russian explanatory dictionary</h1>
    </div>
    <form asp-controller="RusExplanatoryDictionary" asp-action="SearchWord">
        <div class="form-group">
            <label class="control-label">Word</label>
            <input type="text" name="Word" class="form-control" placeholder="search..." pattern="^[А-Яа-яЁё]+$" />
        </div>
        <div class="form-group">
            <input type="submit" value="send" class="btn btn-default" />
        </div>
    </form>
    <h2>@Model.Word  - @Model.Interpretation</h2>
</body>