@{
    string userName = null;
}
@if (@User.Identity.Name != null)
{
    userName = User.Identity.Name;
}
else
{
    userName = "Account";
}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>EnglishDictionary</title>
        <link rel="stylesheet" href="~/css/menu.css"/>
    </head>
    <body>
        <header>
            <nav class="one">
                <ul class="topmenu">
                    <li>@DateTime.Now</li>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="EngRusDictionary" asp-action="SearchWord">EngRusDictionary</a></li>
                    <li><a asp-controller="RusEngDictionary" asp-action="SearchWord">RusEngDictionary</a></li>
                    <li><a asp-controller="EngExplanatoryDictionary" asp-action="SearchWord">EngExplanatoryDictionary</a></li>
                    <li><a asp-controller="RusExplanatoryDictionary" asp-action="SearchWord">RusExplanatoryDictionary</a></li>
                    @if (userName != "Account")
                        {
                            <li><a asp-controller="AddTheWord" asp-action="Add">AddTheWord</a></li>
                        }
                    <li class="position">
                    @if (userName != "Account")
                        {
                            <a asp-controller="Account" asp-action="Profile">@userName<i class="fa fa-angle-down"></i></a>
                            <ul class="submenu">
                                <li><a asp-controller="Account" asp-action="Profile">My profile</a></li>
                                <li><a asp-controller="Account" asp-action="Exit">Exit</a></li>
                            </ul>
                        }
                    else
                        {
                            <a asp-controller="Account" asp-action="Login">@userName<i class="fa fa-angle-down"></i></a>
                        }
                </li>
                </ul>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
