@model EnglishDictionary.Models.RusEngDictionaryModel;
@{
    ViewBag.Title = "ResultOfSearch";
}
<link rel="stylesheet" href="~/css/StyleDictionary.css" />

<body>
    <form asp-controller="RusEngDictionary" asp-action="SearchWord">
        <div class="form-group">
            <label class="control-label">Word</label>
            <input type="text" name="Word" class="form-control" placeholder="search..." />
        </div>
        <div class="form-group">
            <input type="submit" value="Отправить" class="btn btn-default" />
        </div>
    </form>
    <h2>@Model.Word [@Model.Transcription] - @Model.Translation</h2>
</body>