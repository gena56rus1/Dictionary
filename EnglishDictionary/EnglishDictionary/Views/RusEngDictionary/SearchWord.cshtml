<link rel="stylesheet" href="~/css/StyleDictionary.css" />   

<body>
    <div class="text-center" align="center">
        <h1 class="display-4">Russian-English dictionary</h1>
    </div>
    <form asp-controller="RusEngDictionary" asp-action="SearchWord">
        <div class="form-group">
            <label class="control-label">Word</label>
            <input type="text" name="Word" class="form-control" placeholder="search..." pattern="^[А-Яа-яЁё]+$" />
        </div>
        <div class="form-group">
            <input type="submit" value="send" class="btn btn-default" />
        </div>
    </form>
</body>